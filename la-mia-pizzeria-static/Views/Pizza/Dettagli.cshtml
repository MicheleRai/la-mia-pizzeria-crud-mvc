@model Pizza

@{
	var pizza = Model;
}

<h2>@pizza.Name</h2>

<div class="container">
	<div class="p-2">
		<div class="image">
			<img class="post-link-image" src="@pizza.Foto">
		</div>
		<div>
			<p>
				@pizza.Description
			</p>
			<p>
				@pizza.Prezzo $
			</p>
			<div class="buttonContainer d-inline-flex">
				<a class="btn btn-warning me-2" href="@Url.Action("Update", "Pizza", new { Id = pizza.Id })">Edit</a>
				<form asp-action="Delete" asp-controller="Pizza" asp-route-id="@pizza.Id">
					@Html.AntiForgeryToken()
					<button class=" btn btn-danger" type="submit">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>
