@model Pizza

@{
	var pizza = Model;
}

<h2>Edit pizza</h2>

<div class="container">
	<div class="pad">
		<form method="post" asp-controller="Pizza" asp-action="Update" asp-route-id="@pizza.Id" enctype="multipart/form-data">
			@Html.AntiForgeryToken()
			<div class="form-field">
				<label asp-for="Name">Nome</label>
				<input asp-for="Name" />
				<span asp-validation-for="Name" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Description">Descrizione</label>
				<textarea asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Foto">Percorso Foto</label>
				<input asp-for="Foto" />
				<span asp-validation-for="Foto" class="text error"></span>
			</div>
			<button class="btn btn-success" type="submit">Save</button>
		</form>
	</div>
</div>
